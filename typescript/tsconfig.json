{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "ES2017"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  }
}
